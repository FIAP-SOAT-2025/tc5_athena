{
  "title": "Athena - Saúde do Sistema",
  "uid": "athena-system",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-24h", "to": "now" },
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "API Status",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"nestjs-api\"}",
          "legendFormat": ""
        }
      ],
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "DOWN", "color": "red" },
                "1": { "text": "UP", "color": "green" }
              }
            }
          ]
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "PostgreSQL Status",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"postgres\"}",
          "legendFormat": ""
        }
      ],
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "DOWN", "color": "red" },
                "1": { "text": "UP", "color": "green" }
              }
            }
          ]
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Conexões Ativas ao BD",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(pg_stat_database_numbackends{datname!~\"template.*|postgres\"})",
          "legendFormat": ""
        }
      ],
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "mappings": []
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Tamanho do Banco de Dados",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(pg_database_size_bytes{datname!~\"template.*|postgres\"})",
          "legendFormat": ""
        }
      ],
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": { "mode": "fixed", "fixedColor": "purple" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "purple", "value": null }] },
          "mappings": []
        }
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 }
    },

    {
      "id": 10,
      "type": "row",
      "title": "Endpoints Mais Utilizados (24h)",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 4 }
    },
    {
      "id": 11,
      "type": "bargauge",
      "title": "Top Endpoints por Volume de Requisições",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(7, sum by (route, method) (increase(http_requests_total{kubernetes_namespace=\"tc5-athena\"}[24h])))",
          "legendFormat": "{{method}} {{route}}"
        }
      ],
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "valueMode": "color",
        "showUnfilled": true,
        "minVizWidth": 0,
        "minVizHeight": 10
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "min": 0,
          "color": { "mode": "continuous-GrYlRd" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] },
          "mappings": []
        }
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 5 }
    },
    {
      "id": 12,
      "type": "bargauge",
      "title": "Top Endpoints com Mais Erros (4xx / 5xx)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(7, sum by (route, method) (increase(http_requests_total{kubernetes_namespace=\"tc5-athena\",status_code=~\"[45]..\"}[24h])))",
          "legendFormat": "{{method}} {{route}}"
        }
      ],
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "valueMode": "color",
        "showUnfilled": true,
        "minVizWidth": 0,
        "minVizHeight": 10
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "min": 0,
          "color": { "mode": "continuous-RdYlGr" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }] },
          "mappings": []
        }
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 5 }
    },

    {
      "id": 20,
      "type": "row",
      "title": "Atividade da API nas Últimas 24h",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 }
    },
    {
      "id": 21,
      "type": "timeseries",
      "title": "Volume de Requisições por Endpoint",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (route, method) (rate(http_requests_total{kubernetes_namespace=\"tc5-athena\"}[10m]))",
          "legendFormat": "{{method}} {{route}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "min": 0 }
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["sum", "max"] }
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 15 }
    },

    {
      "id": 30,
      "type": "row",
      "title": "Banco de Dados PostgreSQL",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 24 }
    },
    {
      "id": 31,
      "type": "timeseries",
      "title": "Conexões ao Banco de Dados",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (datname) (pg_stat_database_numbackends{datname!~\"template.*|postgres\"})",
          "legendFormat": "{{datname}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "min": 0 }
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 25 }
    },
    {
      "id": 32,
      "type": "timeseries",
      "title": "Transações por Segundo (TPS)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (datname) (rate(pg_stat_database_xact_commit_total{datname!~\"template.*|postgres\"}[5m]) + rate(pg_stat_database_xact_rollback_total{datname!~\"template.*|postgres\"}[5m]))",
          "legendFormat": "{{datname}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short", "min": 0 }
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 25 }
    }
  ]
}
